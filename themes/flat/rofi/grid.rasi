configuration {
  show-icons:                  true;
  kb-remove-char-back:         "BackSpace";
  kb-remove-to-eol:            "Control+Delete";
  kb-accept-entry:             "Return";
  kb-mode-complete:            "";
  kb-mode-next:                "Shift+Right,Control+l";
  kb-mode-previous:            "Shift+Left,Control+h";
  kb-row-up:                   "Up,Control+k";
}

* {
  active: ${color24};
  background0: ${color16};
  background1: ${color17};
  background2: ${color18};
  font: "JetBrains Mono Nerd Font 10";
  foreground0: ${color20};
  urgent: ${color26};
}

element {
  orientation:      vertical;
  enabled:          true;
  padding:          40px 10px;
  border-radius:    5px;
  background-color: transparent;
  text-color:       var(foreground0);
  cursor:           pointer;
}

element-icon {
  size: 2.5em;
}

element-text {
  cursor: inherit;
  horizontal-align: 0.5;
  size: 1em;
  text-color: inherit;
  vertical-align: 0.5;
}

element alternate.normal,
element normal.normal {
  background-color: var(background1);
  text-color: var(foreground0);
}

element alternate.active,
element normal.active {
  background-color: var(background1);
  text-color: var(active);
}

element alternate.urgent,
element normal.urgent {
  background-color: var(background1);
  text-color: var(urgent);
}

element selected.normal {
  background-color: var(background2);
  text-color: var(foreground0);
}

element selected.active {
  background-color: var(background2);
  text-color: var(active);
}

element selected.urgent {
  background-color: var(background2);
  text-color: var(urgent);
}

entry {
  background-color: var(background2);
  border-color: var(background2);
  border-radius: 0 0 10px 10px;
  border: none;
  cursor-width: 8px;
  enabled: true;
  hide-cursor-on-empty: true;
  horizontal-align: 0.5;
  margin: 0px;
  padding: 15px;
  placeholder: "";
  text-color: var(active);
}

inputbar {
  background-color: var(background2);
  border-color: transparent;
  border-radius: 0 0 10px 10px;
  border: none;
  children: [ "entry" ];
  enabled: true;
}

listview {
  background-color: var(background0);
  border: none;
  columns: 5;
  cursor: "default";
  cycle: true;
  dynamic: true;
  enabled: true;
  fixed-columns: true;
  fixed-height: true;
  layout: vertical;
  lines: 1;
  margin: 0;
  padding: 20px;
  reverse: false;
  scrollbar: false;
  spacing: 25px;
}

mainbox {
  background-color: transparent;
  background-image: url("~/.themer/wallpapers/macchiato/wall.png", width);
  border-radius: 10px;
  border: none;
  children: [ "listview", "inputbar" ];
  enabled: true;
  padding: 500px 0 0 0;
  spacing: 0;
}

message {
  background-color: var(background2);
  border-radius: 0;
  enabled: true;
  margin: 0;
  padding: 15px;
  text-color: var(active);
}

textbox {
  background-color:            inherit;
  text-color:                  inherit;
  vertical-align:              0.5;
  horizontal-align:            0.5;
}

window {
  anchor: center;
  background-color: var(background0);
  border: 3px solid;
  border-color: var(background0);
  border-radius: 10px;
  cursor: "default";
  fullscreen: false;
  location: center;
  padding: 0;
  transparency: "real";
  width: 1000px;
  x-offset: 0;
  y-offset: 0;
}
