; vim:ft=dosini
[settings]
screenchange-reload = true

[colors]
foreground = #D8DEE9
background = #2E3440
color0     = #3B4252
color1     = #BF616A
color2     = #A3BE8C
color3     = #EBCB8B
color4     = #81A1C1
color5     = #B48EAD
color6     = #88C0D0
color7     = #D8DEE9

[bar/top]
height       = 30
border-size  = 0
fixed-center = true
monitor      = ${env:PRIMARY}
scroll-down  = bspwm-deskprev
scroll-up    = bspwm-desknext
width        = 100%
wm-restack   = bspwm

background          = ${colors.background}
border-bottom-color = ${colors.foreground}
border-bottom-size  = 0
foreground          = ${colors.foreground}
line-size           = 2
padding-left        = 0
padding-right       = 0

tray-position = right
tray-padding = 1
tray transparent = false
tray-background = ${colors.background}

font-0 = JetBrains Mono:pixelsize=10;2
font-1 = JetBrainsMono Nerd Font Mono:pixelsize=16;2

modules-left   = menu bspwm xwindow
modules-center =
modules-right  = memory cpu temperature mpd task  wlan lan volume battery time

[module/battery]
type = internal/battery

battery = BAT0
adapter = ${env:POWER}
full-at = 98

format-charging            = "%{A1:dunstify Charging <label-charging> --icon=battery-good-charging:}<animation-charging>%{A}"
format-charging-padding    = 1
format-full                = "%{A1:dunstify Full <label-full> --icon=battery-full:}<ramp-capacity>%{A}"
format-full-foreground     = "${colors.color0}"
format-full-padding        = 1
format-discharging         = "%{A1:dunstify Discharging <label-discharging> --icon=battery-good-charging:}<ramp-capacity>%{A}"
format-discharging-padding = 1

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 500

[module/bspwm]
type = internal/bspwm
pin-workspaces = false

label-empty               = %index%
label-empty-foreground    = ${colors.color0}
label-empty-padding       = 1
label-focused             = %index%
label-focused-background  = ${colors.color0}
label-focused-foreground  = ${colors.color4}
label-focused-underline   = ${colors.color4}
label-focused-padding     = 1
label-normal              = %index%
label-occupied            = %index%
label-occupied-foreground = ${colors.color0}
label-occupied-padding    = 1
label-urgent              = %index%
label-urgent-padding      = 1

[module/cpu]
type     = internal/cpu
interval = 2

format-background           = ${colors.background}
format-foreground           = ${colors.foreground}
format-padding              = 1
format-prefix               = ""
format-prefix-padding-right = 1
format-underline            = ${colors.background}
format-warn-padding         = 1

label = %percentage:2%%

[module/lan]
type = internal/network

interface = ${env:ETH}
interval  = 3.0

format-connected               = <label-connected>
format-connected-foreground    = ${colors.foreground}
label-connected                = %{A1:dunstify Wired ' %downspeed%   %upspeed%' --icon=network-wired:}%{A}
label-connected-padding        = 1

format-disconnected            = <label-disconnected>
format-disconnected-foreground = ${colors.color0}
label-disconnected             = 
label-disconnected-padding     = 1

[module/memory]
type = internal/memory
interval = 2

format-background           = ${colors.background}
format-foreground           = ${colors.color7}
format-padding              = 1
format-prefix               = 
format-prefix-padding-right = 1
format-underline            = ${colors.background}

label = %percentage_used:2%%

[module/menu]
type     = custom/script
interval = 90
tail     = true

exec        = ~/.bin/xmenu-button.sh
click-left  = ~/.bin/xmenu-dropdown.sh
click-right = ~/.bin/xmenu-dropdown.sh
format-foreground = ${colors.color0}

[module/mpd]
type = internal/mpd

format-offline            = %{A1:mopidy &:}ﱙ%{A}
format-offline-foreground = ${colors.color0}
format-offline-padding    = 1
format-online             = "<icon-prev><icon-seekb><toggle><icon-seekf><icon-next> <label-song> "
label-song                = "%{A1:~/.config/polybar/scripts/ncmpcpp-song.sh -a:}ﱘ%{A}"

icon-prev             = 
icon-prev-padding     = 1
icon-seekb            = 
icon-seekb-padding    = 1
icon-stop             = 
icon-stop-padding     = 1
icon-pause            = 
icon-pause-padding    = 1
icon-play             = 
icon-play-padding     = 1
icon-seekf            = 
icon-seekf-padding    = 1
icon-next             = 
icon-next-padding     = 1

[module/task]
type       = custom/script
interval   = 2

label         = %output%
label-padding = 1

exec         = ~/.config/polybar/scripts/hamster.sh show -f "#3B4252"
click-right  = ~/.config/polybar/scripts/hamster.sh open
click-left   = ~/.config/polybar/scripts/hamster.sh notify
click-middle = ~/.config/polybar/scripts/hamster.sh stop

[module/temperature]
type = internal/temperature

hwmon-path       = ${env:TEMPERATURE}
thermal-zone     = 0
warn-temperature = 60

format              = <ramp> <label>
format-padding      = 1
label               = %temperature-c:2%
format-warn         = <ramp> <label-warn>
format-warn-padding = 1
label-warn          = %temperature-c:2%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-5 = 

[module/time]
type = internal/date
interval = 1

date     =
date-alt = "%{A1:~/.config/polybar/scripts/calendar.sh --popup &:}%y/%m/%d%{A} "
time     = "%H:%M"
time-alt = "%H:%M:%S"

label         = "%date%%time%"
label-padding = 1

[module/volume]
type = custom/script
tail = true

label         = %output%
label-padding = 1

exec         = ~/.config/polybar/scripts/volume.sh listen -f "#3B4252"
click-right  = exec pavucontrol &
click-left   = ~/.config/polybar/scripts/volume.sh toggle
scroll-up    = ~/.config/polybar/scripts/volume.sh up
scroll-down  = ~/.config/polybar/scripts/volume.sh down

[module/wlan]
type = internal/network

interface = ${env:WLAN}
interval  = 3.0

format-connected               = <label-connected>
format-connected-foreground    = ${colors.foreground}
label-connected                = %{A1:dunstify %essid% ' %downspeed%   %upspeed%' --icon=network-wireless:}直%{A}
label-connected-padding        = 1

format-disconnected            = <label-disconnected>
format-disconnected-foreground = ${colors.color0}
label-disconnected             = 睊
label-disconnected-padding     = 1

[module/xwindow]
type = internal/xwindow

format-background = ${colors.color0}
format-foreground = ${colors.color4}
format-underline  = ${colors.color4}
label             = %title:0:30:...%
label-padding     = 1
